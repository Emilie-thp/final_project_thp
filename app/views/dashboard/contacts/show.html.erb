<div class="container-fluid">
  <br>
    <div class="card">
      <div class="card-header">
        <h2 class="section-title mb-40 text-center">Message n° <%= @contact.id %></h2>
        <p align ="center"><%= link_to "Retourner aux messages", dashboard_contacts_path, class:"btn btn-info" %>
      </div>
    
      <div class="card-body">
        <div class="card-text">
          <table class="table table-striped table-sm">
          <p align text="center">Message envoyé le <%= @contact.created_at.strftime("%d/%m/%Y à  %Hh%M") %></p>
          <div class="row">
            <div class="col">
              <br>
              <p>Envoyé par :</p>
              <br>    
              <p>Ses coordonnées:</p>
              <br>              
              <p>Particuper ou professionnel:</p>
              <br>  
              <p>Message:</p>    
            </div>
            <div class="col">
              <br>
              <p><%= @contact.name %></p>
              <br>    
              <p><%= @contact.email %></p>
              <br>              
              <p><%= @contact.status %></p>
              <br>  
              <p><%= @contact.content %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
 </div>