<div class="container-fluid">

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Messages</li>
  </ol>

  <!-- DataTables Example -->
  <div class="card mb-3">
    <div class="card-header">
      <h2 class="section-title text-center">Les messages reçus</h2>
    </div>
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
          <tr>
            <th>Date</th>
            <th>Expéditeur</th>
            <th>Email</th>
            <th>Statut</th>
            <th>Objet</th>
            <th>Consulter</th>
          </tr>
          </thead>
          <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.created_at.strftime("%d/%m/%Y") %> </td>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><%= contact.status %></td>
              <td><%= contact.subject %> </td>
              <td><%= link_to dashboard_contact_path(contact.id) do %>
                  <i class="fa fa-search fa-2x d-flex justify-content-center"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
    