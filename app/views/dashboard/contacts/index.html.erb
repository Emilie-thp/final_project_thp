<div class="container-fluid">

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Messages</li>
  </ol>

  <!-- DataTables Example -->
    <div class="card mb-3">
      <div class="card-header">
        <h2 class="section-title text-center">Les messages reçus</h2>
      </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Créée le</th>
                    <th>Modifiée le</th>
                    <th>Statut</th>
                    <th>Voir</th>
                    <th>Editer</th>
                    <th>Supprimer</th>
                  </tr>
                </thead>


<div class="container-fluid">
  <br>
  <div class="card">
    <div class="card-header">
      <h2 class="section-title mb-40 text-center">Consulter les messages</h2>
    </div>
  
    <div class="card-body">
      <div class="card-text">
        <table class="table table-striped table-sm">
          <tr>
            <th>Nom et prénom</th>
            <th>Email</th>
            <th>Status</th>
            <th>Date</th>
            <th>Objet</th>
            <th>Consulter</th>
          </tr>
          <% @contacts.each do |contact| %>
          <tr>            
            <td><%= contact.name %></td>  
            <td><%= contact.email %></td>
              <% if contact.status %>
                  <td>Professionnel</td>
                <%else%>
                  <td>Particulier</td>
                <%end%>
            <td><%= contact.created_at.strftime("%d/%m/%Y") %> </td>    
            <td><%= contact.subject %> </td>     
            <td><%= link_to "Lire", dashboard_contact_path(contact.id), class:"btn btn-info" %></td>
          </tr>
          <%end%>      
        </table>
      <div>
    </div>
  </div>
  
</div>