<div class="container-fluid">

  <!-- Breadcrumbs-->
  <ol class="breadcrumb">
    <li class="breadcrumb-item active">Actualités</li>
    <li class="breadcrumb-item">
      <%= link_to 'Voir la page Actualités du site', events_path %></a>
    </li>
  </ol>

  <!-- DataTables Example -->
    <div class="card mb-3">
      <div class="card-header">
        <h2 class="section-title text-center">Mes actualités</h2>
          <p align ="center"><%= link_to "Créer une nouvelle activité", new_dashboard_event_path, class:"btn btn-success" %></p>
      </div>
        <div class="card-body">
          <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                  <tr>
                    <th>Titre</th>
                    <th>Auteur</th>
                    <th>Créée le</th>
                    <th>Modifiée le</th>
                    <th>Statut</th>
                    <th>Voir</th>
                    <th>Editer</th>
                    <th>Supprimer</th>
                  </tr>
                </thead>
                  <% @events.each do |event| %>
                    <%if event.admin == current_admin%>
                    <tr>
                      <td><%= event.title %>  </td>
                      <td>Admin n°<%= event.admin.id %> </td>
                      <td><%= event.created_at.strftime("%d/%m/%Y") %> </td>
                      <td><%= event.updated_at.strftime("%d/%m/%Y") %> </td>
                      
                        <%if event.published %>
                          <td>En ligne</td>
                        <%else%>
                          <td>Hors ligne</td>
                        <%end%>
                      
                      <td><%= link_to dashboard_event_path(event.id) do %>
                          <i class="fa fa-search fa-2x d-flex justify-content-center"></i>
                        <%end%>
                      </td>             
                      <td><%= link_to edit_dashboard_event_path(event.id) do %>
                          <i class="fa fa-edit fa-2x d-flex justify-content-center"></i>
                        <%end%>
                      </td>
                      <td><%= link_to dashboard_event_path(event.id), data: {confirm: "Êtes-vous sûr.e de vouloir supprimer cette actualité à tout jamais ?"}, method: :delete do %>
                          <i class="fa fa-trash fa-2x d-flex justify-content-center"></i>
                        <%end%>
                      </td>
                    </tr>
                  <%else%>
                  <%end%>
                <%end%>
            </table>
          </div>
        </div>
      </div>

