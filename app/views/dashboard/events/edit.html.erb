<div class="wrapper gray-wrapper">
  <% if @event.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <p class="home-header-font">Nous n'avons pas réussi à créer l'actualité pour la (ou les) raison(s) suivante(s)
        :</p>
      <ul>
        <% @event.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>

      </ul>
  <% end %>
  </div>

  <div class="container-fluid">

    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
      <li class="breadcrumb-item active">Mise à jour de l'actualité</li>
      <li class="breadcrumb-item">
        <%= link_to 'Revenir à toutes les actualités', dashboard_events_path %>
      </li>
    </ol>

  </div>

  <div class="container inner">
    <div class="row">
      <div class="col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
        <h2 class="section-title text-center">Actualité "<%= @event.title %>"</h2>

        <!-- Button for published / unpublished -->
        <center>
          <% if @event.published %>
            <%= link_to 'Prévisualiser', dashboard_event_path(@event), class: 'btn btn-ice home-header-font' %>
            <%= link_to 'Mettre hors ligne', update_published_dashboard_event_path(@event), method: :put, class: 'btn btn-danger home-header-font' %>
          <% else %>
            <%= link_to 'Prévisualiser', dashboard_event_path(@event), class: 'btn btn-ice home-header-font' %>
            <%= link_to 'Mettre en ligne', update_published_dashboard_event_path(@event), method: :put, class: 'btn btn-success home-header-font' %>
          <% end %>
        </center>
        <!-- /Button for published / unpublished -->

        <div class="space60"></div>

        <p class="home-header-font">Si vous souhaitez modifier certaines informations, modifier le formulaire ci-dessous
          et cliquer sur Enregistrer les modifications.</p>
        <div class="space10"></div>
        <h6><b>Titre de l'actualité</b></h6>
        <%= form_with model: @event, url: dashboard_event_path, local: true do |f| %>
          <%= f.text_field :title, class: "form-control", placeholder: "Titre" %>
          <div class="space30"></div>
          <h6><b>Description rapide</b></h6>
          <%= f.text_area :description, class: "form-control", placeholder: "Description (en 1 phrase)" %>
          <div class="space30"></div>
          <h6><b>Détails de l'actualité</b></h6>
          <%= f.text_area :content, class: "form-control", placeholder: "Détails", :rows => 6 %>
          <div class="space30"></div>
          <h6><b>Adresse de l'événement (si nécessaire)</b></h6>
          <%= f.text_area :location, class: "form-control", placeholder: "Ville" %>
          <div class="space30"></div>
          <h6><b>Date et heure de l'événement (si nécessaire) </b></h6>
          <%= f.text_field :date, class: "form-control", placeholder: "Date et heure" %>
          <br><br>
          <%= f.submit "Modifier les informations", class: 'btn btn-ice home-header-font' %>
        <% end %>

        <div class="space30"></div>
      </div>
    </div>
  </div>
</div>