<div class="container_fluid">
  <br>
    <div class="card">
      <div class="card-header">
        <h2 class="section-title mb-40 text-center">Gérer les articles</h2>
        <p align ="center"><%= link_to "Créer un nouvel article", new_dashboard_article_path, class:"btn btn-success" %></p>
      </div>
    
      <div class="card-body">
        <div class="card-text">
          <table class="table table-striped table-sm">
            <tr>
              <th>Titre</th>
              <th>Auteur</th>
              <th>Créée le</th>
              <th>Modifiée le</th>
              <th>Statut</th>
              <th>Edition</th>
              <th>Suppression</th>
            </tr>
            <% @articles.each do |article| %>
            <tr>
              <td><%= article.title %>  </td>
              <td>Admin n°<%= article.admin.id %> </td>
              <td><%= article.created_at.strftime("%d/%m/%Y") %> </td>
              <td><%= article.updated_at.strftime("%d/%m/%Y") %> </td>
                <%if article.published %>
                  <td>En ligne</td>
                <%else%>
                  <td>Hors ligne</td>
                <%end%>
              <td><%= link_to "Editer", edit_dashboard_article_path(article.id), class:"btn btn-info" %></td>
              <td><%= link_to "Supprimer", dashboard_article_path(article.id), class:"btn btn-danger",  data: {confirm: "Êtes-vous sûr.e de vouloir supprimer cet article à tout jamais ?"}, method: :delete %></td>
            </tr>
            <%end%>       
          </table>
        <br>
      </div>
    </div>
  </div>
</div>
