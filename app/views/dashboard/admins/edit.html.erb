<div class="wrapper light-wrapper">
  <div class="container inner">
    <div class="row">
      <div class="col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
        <h2 class="section-title mb-40 text-center">Editer votre profil</h2>
        <div class="space40"></div>
        
        <%= form_with model: @admin, url: dashboard_admin_path, local: true do |f| %>


          <div class="form-group row">
            <label class="col-sm-2">Prénom</label>
            <div class="col-sm-10">
             <%= f.text_field :first_name, class:"form-control" %>
            </div>
          </div>  

  

          <div class="form-group row">
            <label class="col-sm-2">Nom</label>
            <div class="col-sm-10">
             <%= f.text_field :last_name, class:"form-control" %>
            </div>
          </div>  


          <div class="form-group row">
            <label class="col-sm-2">Pseudo</label>
            <div class="col-sm-10">
             <%= f.text_field :pseudo, class:"form-control",  placeholder: "Pseudo" %>
            </div>
          </div>  



        <div class="space30"></div>
        <div class="text-center">
          <%=f.submit "Éditer", class:"btn btn-full-rounded btn-teal"%>
        </div>
        <% end %>
      </div>
    </div>
    <!-- /column -->
  </div>
  <!-- /.row -->
</div>
<!-- /.container -->
