<div class="container-fluid">
  <br>
    <div class="card">
      <div class="card-header">
        <h2 class="section-title mb-40 text-center">Gérer les réalisations</h2>
        <p align ="center"><%= link_to "Créer une nouvelle réalisation", new_dashboard_project_path, class:"btn btn-success" %></p>
      </div>
    
      <div class="card-body">
        <div class="card-text">
          <table class="table table-striped table-sm">
            <tr>
              <th>Titre</th>
              <th>Auteur</th>
              <th>Créée le</th>
              <th>Modifiée le</th>
              <th>Statut</th>
              <th>Edition</th>
              <th>Suppression</th>
            </tr>
            <% @projects.each do |project| %>
            <tr>            
              <td><%= project.title %>  </td>
              <td>Admin n°<%= project.admin.id %> </td>
              <td><%= project.created_at.strftime("%d/%m/%Y") %> </td>
              <td><%= project.updated_at.strftime("%d/%m/%Y") %> </td>
                <%if project.published %>
                  <td>En ligne</td>
                <%else%>
                  <td>Hors ligne</td>
                <%end%>
              <td><%= link_to "Editer", edit_dashboard_project_path(project.id), class:"btn btn-info" %></td>
              <td><%= link_to "Supprimer", dashboard_project_path(project.id), class:"btn btn-danger",  data: {confirm: "Êtes-vous sûr.e de vouloir supprimer cette réalisation à tout jamais ?"}, method: :delete %></td>
            </tr>
            <%end%>      
          </table>
      </div>
    </div>
  </div>
</div>
