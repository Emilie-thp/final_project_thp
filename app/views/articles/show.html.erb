<!-- /.wrapper -->
<div class="wrapper light-wrapper">
  <div class="container inner">
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        <div class="blog classic-view">
          <div class="post">
            <h1 class="post-title text-center"><a href="blog-post.html"><%=@article.title%></a></h1>
            <p class="text-center"><strong><%=@article.description%></strong></p>
            <div class="meta text-center"><span class="date">Ecrit le <%=@article.created_at.strftime("%d/%m/%Y")%></span><span class="author">Par <a href="#"><%= @article.admin.pseudo%></a></span>
            </div>
            <%if @article.image.attached?%>
            <figure class="mb-25">
                <%= image_tag @article.image %>
            </figure>
            <%end%>
            <div class="post-content">
              <div class="space10"></div>
              <p><%=simple_format(@article.content)%></p>
              <!-- /.social -->
            </div>
            <!-- /.post-content -->
          </div>

          <!-- /.post-nav -->
          <div class="divider-icon"><i class="fa fa-pencil"></i></div>
          <div class="row">
            <div class="col-md-4">
              <%if @article.admin.avatar.attached? %>
              <figure>
                <%= image_tag @article.admin.avatar %>
              </figure>
                <%end%>
            </div>
            <!--/column -->
            <div class="col-md-8">
                <h4>Un article de <%= @article.admin.pseudo%></h4>
                <p><%=@article.admin.description%></p>
            </div>
            <!--/column -->
          </div>
          <!--/.row -->
        </div>
        <!-- /.blog -->
      </div>
      <!--/column -->
    </div>
    <!--/.row -->
  </div>
  <!-- /.container -->
</div>
