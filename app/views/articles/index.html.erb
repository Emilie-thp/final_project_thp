<div class="wrapper light-wrapper">
  <div class="container inner">
    <h2 class="section-title section-title-upper text-center">Nos articles</h2>
    <div class="space30"></div>
    <div class="blog grid grid-view text-center">
      <div class="row isotope">
        <% @articles.each do |article| %>
        <div class="item post grid-sizer col-md-6 col-lg-4">
          <figure class="overlay overlay2 mb-25">
            <%= link_to image_path('articles/article11.jpg') do %>
                <%= image_tag('articles/article11.jpg', class:'', alt:'') %>
            <%end%>
          </figure>
          <div class="post-content pl-10 pr-10">
            <div class="meta"><span class="date"><%=article.created_at.to_date%></span><span class="comments"><a href="#">2</a></span><span class="category"><%=article.admin.email%></span></div>
            <h2 class="post-title"><a href="blog-post.html"><%=article.title%></a></h2>
            <p><%=article.description%></p>
            <%= link_to "Lire l'article", article_path(article.id), class: "more" %>
          </div>
          <!-- /.post-content -->
        </div>
        <!-- /.post -->
        <%end%>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.blog -->
    <div class="space30 d-md-none"></div>
    <div class="pagination bordered d-flex justify-content-center">
      <ul>
        <li><a href="#"><i class="fa fa-chevron-left"></i></a></li>
        <li class="active"><a href="#">1</a></li>
        <li><a href="#">2</a></li>
        <li><a href="#">3</a></li>
        <li><a href="#"><i class="fa fa-chevron-right"></i></a></li>
      </ul>
    </div>
    <!-- /.pagination -->
  </div>
  <!-- /.container -->
</div>
<!-- /.wrapper -->
