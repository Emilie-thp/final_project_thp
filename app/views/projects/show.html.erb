<div class="content-wrapper">
  <!-- /.wrapper -->
      <div class="wrapper light-wrapper">
        <div class="container inner">
          <div class="row">
            <div class="col-lg-8 offset-lg-2">
              <div class="blog classic-view">
                <div class="post">
                  <h1 class="post-title text-center"><%=@project.title%></h1>
                  <div class="space10"></div>
                  <p class="text-center"><strong><%=@project.description%></strong></p>
                  <div class="space10"></div>
                  <% if @project.thumbnail.attached?%>
                    <figure class="mb-25"><%= image_tag project.thumbnail, alt: 'miniature' %></figure>
                  <%else%>
                    <figure class="mb-25"><%= image_tag('realisations/fond.jpg', class:'', alt:'') %></figure>
                  <%end%>
                  <div class="post-content">
                    <p class="text"><%=simple_format(@project.content)%></p>
                    <div class="space10"></div>
                    <div class="meta tags mb-10 text-center more-inverse">
                    <% @project.categories.each do |cat| %>
                      <span class="date">#<%=cat.category_name%></span>
                    <%end%>
                    </div>
                  </div>
                  <!-- /.post-content -->
                </div>
                <%if @project.pictures.attached?%>
          			<!-- diaporama pictures => each loop to do ! -->
          		  <div class="swiper-container-wrapper swiper-auto light-gallery" data-aos="fade">
          		    <div class="swiper-container text-center">
          		      <div class="swiper-wrapper">
          		  			<% @project.pictures.each do |image| %>
          			        <div class="swiper-slide"><%= image_tag image %>
          			          <div class="link-wrapper"></div>
          			          <!-- .link-wrapper -->
          			        </div>
          		        <%end%>
          		        <!-- .swiper-slide -->
          		      </div>
          		      <!-- .swiper-wrapper -->
          		    </div>
          		    <!-- .swiper-container -->
          		    <div class="swiper-pagination gap-large"></div>
          		    <div class="swiper-button-next"></div>
          		    <div class="swiper-button-prev"></div>
          		  </div>
                <div class="space40"></div>
                <%else%>
                <div class="space40"></div>
                <%end%>
                <!-- /.post -->
              </div>
              <!-- /.blog -->
            </div>
            <!--/column -->
          </div>
          <!--/.row -->
        </div>
        <!-- /.container -->
      </div>
      <!-- /.wrapper -->
    </div>
