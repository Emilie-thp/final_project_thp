<div class="wrapper light-wrapper">
  <div class="container inner">
    <h1 class="heading mb-0 text-center">Nos actualités et événements</h1>
    <div class="space50"></div>
    <div class="blog grid grid-view boxed newspaper">
      <div class="row isotope">
        <% @events.each do |event| %>
        <div class="item post grid-sizer col-md-6 col-lg-4">
          <div class="box box-border">
            <div class="meta"><span class="date"><%=event.created_at.to_date%></span><span class="comments"><a href="#">2</a></span><span class="category"><%=event.admin.email%></span></div>
            <h2 class="post-title"><%=event.title%></h2>
            <div class="post-content text-left">
              <p><%=event.description%></p>
              <%= link_to "Voir l'actualité", event_path(event.id), class: "more more-inverse" %>
            </div>
            <!-- /.post-content -->
          </div>
          <!-- /.box -->
        </div>
        <!-- /.post -->
        <%end%>
      <!-- /.row -->
    </div>
    <!-- /.blog -->
