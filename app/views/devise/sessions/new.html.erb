<div class="wrapper light-wrapper">
  <div class="container inner">
    <div class="row">
      <div class="col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
        <h2 class="section-title mb-40 text-center"><%= t('.sign_in') %></h2>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="form-group row">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Email</label>
            <div class="col-sm-10">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail3", placeholder:"Email"%>
            </div>
          </div>

          <div class="form-group row">
            <label for="inputPassword3" class="col-sm-2 col-form-label">Mot de passe</label>
            <div class="col-sm-10">
              <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword3", placeholder:"Mot de passe" %>
            </div>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="form-group row">
              <div class="col-sm-2"><strong class="color-dark">Se souvenir de moi</strong></div>
              <div class="col-sm-10">
                <div class="custom-control custom-checkbox">
                  <%= f.check_box :remember_me, class:"custom-control-input", id:"customCheck3"%>
                  <label class="custom-control-label" for="customCheck3"></label>
                </div>
              </div>
            </div>
          <% end %>

          <div class="d-flex justify-content-center">
            <%= f.submit t('.sign_in'), class:"btn btn-ice" %>
          </div><br/>
          <% end %>
        <%= link_to  "Inscription", new_admin_registration_path, class:"d-flex justify-content-center" %>
        <%= link_to  "Mot de passe oubliÃ©?", new_admin_password_path, class:"d-flex justify-content-center" %>
      </div>
    </div>
  </div>
</div>
