<div class="wrapper light-wrapper">
  <div class="container inner">
    <div class="row">
      <div class="col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
        <h2 class="section-title mb-40 text-center"><%= t('.sign_up') %></h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="form-group row">
                <label for="inputEmail3" class="col-sm-2">Email</label>
                <div class="col-sm-10">
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", id:"inputEmail3", placeholder:"Email"%>
                </div>
              </div>


              <div class="form-group row">
                <label class="col-sm-2">Pseudo</label>
                <div class="col-sm-10">
                <%= f.text_field :pseudo, autofocus: true, autocomplete: "pseudo",class:"form-control", placeholder: "Pseudo" %>
                </div>
              </div>

              <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2">Mot de passe</label>
                <div class="col-sm-10">
                <% if @minimum_password_length %>
                <em><%= t('devise.shared.minimum_password_length', count: @minimum_password_length) %></em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class:"form-control", id:"inputPassword3", placeholder:"Mot de passe" %>
                </div>
              </div>

              <div class="form-group row">
                <label for="inputPassword3" class="col-sm-2">Confirmation</label>
                <div class="col-sm-10">
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", id:"inputPassword3", placeholder:"Confirmation du mot de passe" %>
                </div>
              </div>


                <div class="d-flex justify-content-center">
                  <%= f.submit t('.sign_up'), class:"btn btn-ice"%>
                </div>


            <% end %>

            <div class="d-flex justify-content-center"><%= render "devise/shared/links" %></div>
        </div>
      </div>
    </div>
  </div>
